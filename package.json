{
  "name": "weldable",
  "version": "0.0.0",
  "description": "A webpack configuration tool.",
  "author": "cdcabrera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdcabrera/weldable"
  },
  "bugs": {
    "url": "https://github.com/cdcabrera/weldable/issues"
  },
  "keywords": [],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib/",
    "src/*js"
  ],
  "bin": {
    "weldable": "./bin/cli.js"
  },
  "scripts": {
    "build:deps": "bash ./scripts/dependencies.sh --doctor -u --doctorTest \"npm run test:deps\"",
    "build:docs": "run-s -l test:docs docs:md",
    "docs:md": "node ./scripts/readme.docs.js",
    "release": "changelog",
    "start": "./bin/cli.js",
    "test": "run-s -l test:lint test:spell*",
    "test:clearCache": "jest --clearCache",
    "test:deps": "run-s test",
    "test:docs": "run-s test:spell test:lint",
    "test:lint": "eslint ./bin",
    "test:spell-docs": "cspell ./README.md ./CONTRIBUTING.md --config ./cspell.config.json",
    "test:spell": "cspell './bin/**/*.js' --config ./cspell.config.json"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/.*/**",
      "!src/logger/*"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>jest.setupTests.js"
    ]
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "changelog-light": "^0.6.0",
    "cspell": "^7.3.9",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-jsdoc": "^46.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jsdoc-to-markdown": "^8.0.0",
    "lodash": "^4.17.21",
    "npm-check-updates": "^16.14.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1"
  }
}
